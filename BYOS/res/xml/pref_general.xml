<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    

    <EditTextPreference
        android:defaultValue="1"
        android:inputType="number"
        android:key="deck_size"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/deck_size" />

    <ListPreference
        android:defaultValue="4"
        android:entries="@array/rules_list"
        android:entryValues="@array/rules_list"
        android:key="rulebook"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/rulebook" />
    
    <EditTextPreference
        android:defaultValue="1"
        android:inputType="number"
        android:key="build_int"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_build_int" />
    
     <EditTextPreference
        android:defaultValue="1"
        android:inputType="number"
        android:key="move_int"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_move_int" />
     
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="buildwrap"
        android:summary="@string/build_wrap"
        android:title="@string/build_wrap" />
    
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="movewrap"
        android:summary="@string/move_wrap"
        android:title="@string/move_wrap" />
    
    <ListPreference
        android:defaultValue="Alternating-Alternating"
        android:entries="@array/order_list"
        android:entryValues="@array/order_list"
        android:key="order"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/orderopt" />
    <ListPreference
        android:defaultValue="Ace"
        android:entries="@array/rank_list"
        android:entryValues="@array/rank_list"
        android:key="startfound"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/foundstart"/>
</PreferenceScreen>