<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uta.byos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:restoreNeedsApplication="true"
        android:theme="@style/AppTheme" android:debuggable="true">
        <activity
            android:name="com.uta.byos.GameActivity"
            android:label="@string/title_activity_game"
            android:launchMode="standard" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.uta.byos.TestActivity"
            android:label="@string/title_activity_test" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.uta.byos.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>